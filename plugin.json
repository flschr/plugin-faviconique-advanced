{
  "version": "0.0.4",
  "title": "Faviconique+",
  "description": "Give your blog a personal touch with a custom favicon.",
  "fields": [
    {
      "field": "params.faviconique_background_color",
      "label": "Background color",
      "type": "color"
    },
    {
      "field": "params.faviconique_emoji",
      "label": "Emoji (only one)",
      "type": "string"
    },
    {
      "field": "params.faviconique_dark_background_color",
      "label": "Dark mode background color",
      "type": "color"
    },
    {
      "field": "params.faviconique_dark_emoji",
      "label": "Dark mode emoji (only one)",
      "type": "string"
    },
    {
      "field": "params.faviconique_use_dark_mode",
      "label": "Enable dark mode, please",
      "type": "boolean"
    },
    {
      "field": "params.faviconique_use_transparent_background",
      "label": "Use transparent background for emoji",
      "type": "boolean"
    },
    {
      "field": "params.faviconique_use_cdn_safari",
      "label": "Use emoji CDN for Safari only",
      "type": "boolean",
      "default": false,
      "help": "If enabled, Safari will display the favicon via a PNG from an emoji CDN instead of the default emoji rendering."
    }
  ]
}
